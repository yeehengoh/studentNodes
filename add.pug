extends layout

block add
    label Create
    hr
    form(method='POST' action='/add')
        table.list-edit
        p
            label
            | Student ID
            input(type='text', name='studentID', required='')
          p
            label
              | First Name 
              input(type='text', name='firstName', required='')
          p
            label
              | Last Name 
              input(type='text', name='lastName', required='')
          fieldset
            legend Gender
            p
              label
                input(type='radio', name='male', required='', value='Male')
                |  Male
            p
              label
                input(type='radio', name='female', required='', value='Female')
                |  Female
          p
            label
              | Date of Birth
              input(type='date', name='dob', required='')
          p
            label
              | Address 1 
              input(type='text', name='address1', required='')
          p
            label
              | Address 2 
              input(type='text', name='address2', required='')
          p
            label
              | Country
              select#country(name='country', required='')
                option(value=''. selected='selected') Select Country
          p
            label
              | State
              select#state(name='state', required='')
                option(value=''. selected='selected') Select State
          p
            label
              | City
              select#city(name='city', required='')
                option(value=''. selected='selected') Select City
          p
            label
              | Poscode
              input(type='text', name='poscode', required='')
          p
            label
              | Phone Number
              input(type='tel', name='phoneNum')
          p
            button(type="submit").btn Submit
            button(type="button" onclick="javascript: location.href='/'; ").btn Back
    
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js'))
    script(src='../routes/location.js')